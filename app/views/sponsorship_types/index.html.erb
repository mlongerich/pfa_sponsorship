<h1>Sponsorship Types</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable "kind" %></th>
      <th><%= sortable "amount", "Dollar Amount" %></th>
      <th>Occurances</th>
    </tr>
  </thead>
  <% @sponsorship_types.each do |st| %>
    <tr>
      <td> <%= link_to st.kind, st %>  </td>
      <td> <%= link_to st.amount, st %> </td>
      <td> (<%= st.sponsorships.count%>) </td>

    </tr>
  <% end %>
</table>

<p><%= link_to "Create new sponsorship type", new_sponsorship_type_path %></p>
